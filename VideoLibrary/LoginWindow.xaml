        xmlns:local="clr-namespace:VideoLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Label x:Name="TitleLabel" Content="Video Library" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="22" FontWeight="Bold"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Center" Height="23" Margin="0,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Center" Height="23" Margin="0,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginButton" Content="登　陆" HorizontalAlignment="Center" Margin="286,70,30,0" VerticalAlignment="Top" Width="60" Height="23" Click="LoginButton_Click"/>
        <Label x:Name="UsernameLabel" Content="用户名" HorizontalAlignment="Center" Margin="45,70,301,0" VerticalAlignment="Top" Height="23" Width="50"/>
        <Label x:Name="PasswordLabel" Content="密　码" HorizontalAlignment="Center" Margin="45,110,301,0" VerticalAlignment="Top" Height="23" Width="50"/>




    </Grid>
</Window>
